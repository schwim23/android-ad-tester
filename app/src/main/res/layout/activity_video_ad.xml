<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="VAST Video Ad Player"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <View
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Test Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you can see this text, the layout is loading correctly!"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- URL Input Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VAST Ad Tag URL:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etAdTagUrl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:hint="Enter VAST Ad Tag URL"
        android:inputType="textUri"
        android:padding="12dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:background="#f0f0f0"
        android:visibility="visible"
        android:text="Test VAST URL" />

    <!-- Sample Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSampleVast1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Button 1"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSampleVast2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button 2"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Load Ad Button -->
    <Button
        android:id="@+id/btnLoadAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOAD VAST AD - BIG BUTTON"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:visibility="visible"
        android:background="#4CAF50"
        android:textColor="#ffffff" />

    <!-- Video Player -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="VIDEO PLAYER AREA\n(This should be visible)"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#333333"
        android:visibility="visible" />

</LinearLayout>